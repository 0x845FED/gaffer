import os

DEPENDENCIES_SRC_DIR = "/home/john/opendev/gafferDependencies"

BUILD_DIR = "/home/john/build/gaffer"

PYTHON_SRC_DIR = "$DEPENDENCIES_SRC_DIR/Python-2.6.6"
PKGCONFIG_SRC_DIR = "$DEPENDENCIES_SRC_DIR/pkg-config-0.25"
BOOST_SRC_DIR = "$DEPENDENCIES_SRC_DIR/boost_1_42_0"
TBB_SRC_DIR = "$DEPENDENCIES_SRC_DIR/tbb22_013oss"
ILMBASE_SRC_DIR = "$DEPENDENCIES_SRC_DIR/ilmbase-1.0.1"
OPENEXR_SRC_DIR = "$DEPENDENCIES_SRC_DIR/openexr-1.6.1"
JPEG_SRC_DIR = "$DEPENDENCIES_SRC_DIR/jpeg-8c"
TIFF_SRC_DIR = "$DEPENDENCIES_SRC_DIR/tiff-3.9.4"
FREETYPE_SRC_DIR = "$DEPENDENCIES_SRC_DIR/freetype-2.4.4"
GLEW_SRC_DIR = "$DEPENDENCIES_SRC_DIR/glew-1.5.8"
CORTEX_SRC_DIR = "/home/john/opendev/cleanCortex3/trunk"

BUILD_GRAPHVIZ = False
BUILD_DOXYGEN = False

PYOPENGL_SRC_DIR = "$DEPENDENCIES_SRC_DIR/PyOpenGL-3.0.1"

BUILD_GOOGLE_PERFTOOLS = False

QT_SRC_DIR = "$DEPENDENCIES_SRC_DIR/qt-everywhere-opensource-src-4.7.1"
APIEXTRACTOR_SRC_DIR = "$DEPENDENCIES_SRC_DIR/apiextractor-0.10.0"
GENERATORRUNNER_SRC_DIR = "$DEPENDENCIES_SRC_DIR/generatorrunner-0.6.6"
SHIBOKEN_SRC_DIR = "$DEPENDENCIES_SRC_DIR/shiboken-1.0.0~rc1"
PYSIDE_SRC_DIR = "$DEPENDENCIES_SRC_DIR/pyside-qt4.7+1.0.0~rc1"
FONTS_SRC_DIR = "$DEPENDENCIES_SRC_DIR/ttf-bitstream-vera-1.10"

# we set this so that LD_LIBRARY_PATH will point where we want it
# when the gaffer sconstruct invokes the cortex sconstruct
os.environ["IEENV_LIBRARY_PREFIX_PATH"] = BUILD_DIR + "/lib"
# the output is pretty tedious without this disabled
os.environ["IEENV_DISABLE_WRAPPER_ENV_CHECK"] = "1"
# we need these imported so scons runs ok when we invoke the cortex build
ENV_VARS_TO_IMPORT="PATH COMPILER COMPILER_VERSION PYTHONPATH IEENV_ROOT IEENV_DISABLE_WRAPPER_ENV_CHECK IEENV_WORKING_PATH IEENV_LIBRARY_PREFIX_PATH DOXYGEN_VERSION IEENV_DEBUG IEENV_DEBUG_PYTHON IEENV_DEBUGGER IEENV_DEBUGGER_ARGS DELIGHT_CONF SCONS_VERSION DL_VERSION DL_SHADERS_PATH DL_DISPLAYS_PATH CMAKE_VERSION"
